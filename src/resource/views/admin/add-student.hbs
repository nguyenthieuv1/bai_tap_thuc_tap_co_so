<div class="container">
    <h2 class="h2 text-center mt-4">Thêm học sinh mới</h2>
    <h3 class="h4 text-center ">Niên khóa: {{nienkhoa}}</h3>
    <form action="/admin/add-student/{{nienkhoa}}" method="post">
        <div class="mb-3">
            <label for="ten" class="form-label">Họ tên</label>
            <input type="text" class="form-control" id="ten" name="ten">
        </div>
        <div class="mb-3">
            <label for="dob" class="form-label">Ngày sinh</label>
            <input type="date" class="form-control" id="dob" name="dob">
        </div>
        <div class="mb-3">
            <label for="gioitinh" class="form-label">Giới tính</label>
             <select class="form-select" id="gioitinh" name="gioitinh"> 
               <option>Nam</option>   
               <option>Nữ</option>           
               <option>Khác</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="diachi" class="form-label">Địa chỉ</label>
            <input type="text" class="form-control" id="diachi" name="diachi">
        </div>        
        <div class="mb-3">
            <label for="lop" class="form-label">Lớp</label>
            <select class="form-select" id="lop" name="lop"> 
               {{#lop}}
                     <option>{{this.ten}}</option> 
               {{/lop}}               
            </select>
        </div>
        <div class="mb-3">
            <label for="HS1" class="form-label">username</label>
            <input type="text" class="form-control" id="username" name="username">
        </div>
        <div class="mb-3">
            <label for="HS1" class="form-label">password</label>
            <input type="text" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>